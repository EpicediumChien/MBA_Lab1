<Window x:Class="MyApp.LoadImagePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyApp"
        mc:Ignorable="d"
        Title="LoadImagePage">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Width" Value="150" />
                <Setter Property="Height" Value="30" />
                <Setter Property="Margin" Value="10,20"/>
            </Style>
        </Grid.Resources>
        <Image x:Name="LoadedImage" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40" Stretch="None"/>
        
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button Click="OnClick_LoadImage" Content="Load Image" />
            <Button Click="OnClick_Gaussian" Content="Gaussian Blur" />
            <Button Click="OnClick_Sobel" Content="Soble Filter" />
            <Button Click="OnClick_Inverse" Content="Inverse Color" />
            <Button Click="OnClick_AdaptiveThreshold" Content="Adaptive Thresholding" />
            <Button Click="OnClick_Ini" Content="ReadBack" />
        </StackPanel>
    </Grid>
</Window>
